<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Use the same AppCompat/MaterialComponents parents at night -->

    <style name="LaunchTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <style name="NormalTheme" parent="AppTheme">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- keep your brand colors -->
        <item name="colorPrimary">#3533CD</item>
        <item name="colorPrimaryVariant">#2B29A6</item>
        <item name="colorSecondary">#363433</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <!-- optional, if you reference it -->
    <style name="StripePaymentSheet" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="colorPrimary">#3533CD</item>
        <item name="colorSecondary">#363433</item>
    </style>
</resources>